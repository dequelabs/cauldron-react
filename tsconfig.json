{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "typeRoots": ["node_modules/@types"],
    "jsx": "react",
    "declaration": true
  },
  "include": ["src/**/*", "demo/**/*", "__tests__/**/*"],
  "exclude": ["node_modules"]
}
