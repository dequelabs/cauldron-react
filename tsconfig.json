{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declaration": true,
    "allowJs": true,
    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["webpack.config.ts"]
}
