{
  "name": "cauldron-react",
  "version": "5.0.0",
  "description": "Fully accessible react components library for Deque Cauldron",
  "main": "lib/index.js",
  "style": "lib/cauldron.css",
  "typings": "types.d.ts",
  "scripts": {
    "build": "npm run build:lib && npm run build:css",
    "build:lib": "babel --out-dir=lib src --extensions '.ts,.tsx'",
    "build:css": "postcss --output=lib/cauldron.css src/index.css",
    "build:demo": "webpack --bail --config=webpack.config.demo.js",
    "postbuild:demo": "cp demo/_redirects demo/dist/",
    "dev": "webpack-dev-server --config=webpack.config.demo.js",
    "lint": "eslint .",
    "fmt": "prettier --write 'demo/**/*.{css,js}' '{src,test}/**/*.{js,ts,tsx}' *.{js,json,md,ts}",
    "prepublishOnly": "NODE_ENV=production npm run build",
    "release": "standard-version",
    "test": "jest --maxWorkers=1 --coverage",
    "test:ts": "tsc"
  },
  "author": "Harris Schneiderman",
  "license": "MPL-2.0",
  "dependencies": {
    "classnames": "^2.2.6",
    "focus-trap-react": "^3.0.5",
    "focusable": "^2.3.0",
    "keyname": "^0.1.0",
    "prop-types": "^15.6.0",
    "rc-tooltip": "^3.7.2",
    "react-syntax-highlighter": "^6.1.1",
    "unique-string": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dequelabs/cauldron-react.git"
  },
  "peerDependencies": {
    "react": "^16.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-stage-0": "^7.0.0",
    "@babel/preset-typescript": "^7.8.3",
    "@babel/register": "^7.4.0",
    "@types/classnames": "^2.2.9",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "autoprefixer": "^9.3.1",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^8.0.5",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "closest": "0.0.1",
    "css-loader": "^0.28.7",
    "deque-pattern-library": "^7.0.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^4.12.1",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.5.1",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.14",
    "jest": "^24.7.1",
    "jest-axe": "^3.1.1",
    "jsdom": "^15.2.1",
    "jsdom-global": "^3.0.2",
    "less": "^2.7.3",
    "lint-staged": "^7.2.2",
    "nyc": "^11.3.0",
    "postcss-cli": "^6.0.1",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "proxyquire": "^1.8.0",
    "react": "^16.6.0",
    "react-dom": "^16.0.0",
    "react-element-to-jsx-string": "^14.0.2",
    "react-helmet": "^5.2.1",
    "react-router-dom": "^4.2.2",
    "standard-version": "^4.3.0",
    "style-loader": "^0.19.0",
    "typescript": "^3.7.5",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "nyc": {
    "checkCoverage": true,
    "reporter": [
      "text-summary",
      "html"
    ],
    "statements": 90,
    "branches": 80,
    "functions": 80,
    "lines": 90,
    "exclude": [
      "dist",
      "coverage",
      "test/**/*.js"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>__tests__/setupTests.js"
    ],
    "testMatch": [
      "**/__tests__/src/**/*.js",
      "**/__tests__/demo/**/*.js"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.js",
      "**/demo/Demo/**/*.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__tests__/styleMock.js"
    }
  }
}
